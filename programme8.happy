(fun (sum3np1 n)(
	(set sum 1)
	(while (! (= n 1)) (
		(set sum (+ sum 1))
		(if (! (= (%n 2) 0) ) (
			(set n (* 3 (+ n 1)))
		)(
			(set n (/ n 2))
		))
	))
	(return sum)
))

